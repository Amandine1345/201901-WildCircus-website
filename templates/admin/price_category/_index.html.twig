<hr class="my-5">
<h1>Customers categories index</h1>

<p class="text-right">
    <a href="{{ path('price_category_new') }}" role="button" class="btn btn-danger">
        <i class="fas fa-users mr-2"></i>Create new
    </a>
</p>

<table class="table">
    <thead>
    <tr>
        <th>Name</th>
        <th>actions</th>
    </tr>
    </thead>
    <tbody>
    {% for priceCategory in priceCategories %}
        <tr>
            <td>{{ priceCategory.name }}</td>
            <td>
                <a href="{{ path('price_category_edit', {'id': priceCategory.id}) }}">
                    <i class="fas fa-edit mr-2"></i> Edit
                </a>
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="3">no records found</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
