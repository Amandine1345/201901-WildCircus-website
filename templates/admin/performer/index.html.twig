{% extends 'base_admin.html.twig' %}

{% block title %}Performer index{% endblock %}

{% block body %}
    <h1>Performer index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Biography</th>
                <th>Birthday</th>
                <th>Picture</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for performer in performers %}
            <tr>
                <td>{{ performer.id }}</td>
                <td>{{ performer.name }}</td>
                <td>{{ performer.biography }}</td>
                <td>{{ performer.birthday ? performer.birthday|date('Y-m-d') : '' }}</td>
                <td>{{ performer.picture }}</td>
                <td>{{ performer.updatedAt ? performer.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('performer_show', {'id': performer.id}) }}">show</a>
                    <a href="{{ path('performer_edit', {'id': performer.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('performer_new') }}">Create new</a>
{% endblock %}
