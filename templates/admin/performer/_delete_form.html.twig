<form method="post" action="{{ path('performer_delete', {'id': performer.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ performer.id) }}">
    <button class="btn btn-outline-danger"><i class="fas fa-trash-alt mr-2"></i> Delete</button>
</form>
