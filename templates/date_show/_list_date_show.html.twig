{% if dateShows|length > 0 %}
    <div class="row">
        <div class="col-lg-6 col-12 order-lg-1 order-2">
            <table class="table table-striped table-bordered">
                {% for dateShow in dateShows %}
                    <tr>
                        <td>{{ dateShow.date|date('Y-m-d') }}</td>
                        <td>{{ dateShow.city }}</td>
                    </tr>
                {% endfor %}
            </table>
        </div>
        <div class="col-lg-6 col-12 order-lg-2 order-1 mb-4">
            <div id="map" style="height: {{ height }};" data-shows="{{ dateShows|json_encode }}"></div>
        </div>
    </div>
{% else %}
    <div class="text-center my-5">
        <p><i class="fas fa-sad-tear text-danger fa-6x mr-2 mb-2"></i></p>
        <p>Sorry. No date available.</p>
    </div>
{% endif %}

{% if displayPrice %}
    {% include 'price/_list_prices.html.twig' %}
{% endif %}